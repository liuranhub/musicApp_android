<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/music_playing_background"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.music.activity.PlayerActivity" >
	
    
    <android.support.v4.view.ViewPager
        
        ></android.support.v4.view.ViewPager>
    
    
    <RelativeLayout 
        android:id="@+id/operation_contral_palay_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button 
            android:id="@+id/operation_contral_pic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        
        <Button 
            android:id="@+id/operation_contral_next"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            />
        
        <Button 
            android:id="@+id/operation_contral_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/operation_contral_next"
            />
        
        <Button 
            android:id="@+id/operation_contral_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/operation_contral_stop"
            />
        
        <TextView
            android:id="@+id/operation_contral_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/operation_contral_last"
            android:layout_toRightOf="@id/operation_contral_pic" />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/operation_frist_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <Button 
            android:id="@+id/operation_user_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />
        <Button 
            android:id="@+id/operation_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/operation_second_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operation_frist_line"
        >
        <Button 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            />
        
    </RelativeLayout>
    
    
</RelativeLayout>